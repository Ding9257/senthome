.index-category {
  overflow: hidden;
  padding-bottom:100px;
}

.index-category-item {
  float: left;
  width: 33.33%;
  text-align: center;
  padding-top: 10px;
  padding-bottom: 8px;
}

.index-category-item-icon {
  position: relative;
  margin-left: -25px;
  margin-bottom: 5px;
  left: 50%;
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.index-category-item-icon-image {
  margin-top: 10px;
  width: 60px;
  height: 60px;
}

.index-product {
  border-top: 1rpx solid #d9d9d9;
}

.index-product-card {
  padding: 10px;
  border-bottom: 1rpx solid #d9d9d9;
}

.index-product-card-name {
  font-size: 14px;
  font-weight: bold;
}

.index-product-card-price {
  color: #c81623;
  margin-top: 5px;
  margin-left: -2px;
}

.category-right-item {
  float: left;
  border: #ddd 1rpx solid;
  background: #fff;
  background-repeat: no-repeat;
  background-size: contain;
  border-radius: 4px;
  overflow: hidden;
}

.category-right-item-name {
  margin-top: 5px;
  padding-left: 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.category-right-item-price {
  color: #c81623;
  margin-top: 2px;
  margin-bottom: 8px;
  padding-left: 3px;
}
page {
	background: #DEDEDE;
}
.scroll-view {
    height:150px;
    white-space: nowrap;
}
.scroll-view-item_H {
    height:140px;
    width:100px;
    margin:5px;
    display:inline-block;
}

.scroll-view-item_H image {
    width: 40px; height: 80px;
}
.text-center {
    text-align: center;
}
.text-wrap {
     word-wrap:break-word;
     word-break:normal;
     break-all:normal;
     padding:0 10px;
     overflow:auto;
     white-space:pre-line;
}
.button-radius {
    border-radius:50px;
    background:#FCEDA2;
    height:30px;
    line-height:1.9;
}
.button-text {
    text-align:left;
    padding-left:10px;
}
.button-img {
    position: absolute;left:0px;width:30px;height:20px;padding-top:5px;
}
.shop text {
    display:block;
}
.center {
    text-align:center;
}
.top{
    background:#FADE56;
}
.box-shadow {
    box-shadow: 10px 10px 5px #888888;
}
.outline {
    border:1px solid #D7D7D7;
    outline-color:#D7D7D7;
    outline-style:outset;
    outline-width:1px;
}
.footer {
	width: 100%;
	height:145px;
	display: flex;
	flex-direction: row;
	position: fixed;
	bottom: 0;
}
.footer button {
    border-radius: 30px;background:#F6E65D;color:#D84031;
}
.custom-button {
    display: inline-block;
    width:20px;height:20px;
    border-radius: 30px;background:#F6E65D;
    text-align:center;line-height: 20px;
    overflow: hidden;
}
.shop-add-down {
    width:70px;
    height:25px;
    line-height:25px;
}
.shop-add-down image{
    width:20px;
    height:20px;
}
.shop-add-down text {
    display:inline-block;
    width:30px;
    text-align:center;
}