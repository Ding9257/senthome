<view style="background:#DEDEDE;">
    <view style="height:100px;">
        <view style="text-align:right;padding-right:5px;">
            <van-button size="small">活动规则</van-button>
        </view>
        <view style="text-align:center;color:#F2F2F2;font-size:36px;">
            <text>惊喜开福袋</text>
        </view>
    </view>
    <view class="index-category" style="padding-top:10px;">
        <navigator class="index-category-item" wx:for="{{category_list}}" wx:for-item="category" wx:key="{{category.id}}">
          <view class="index-category-item-icon" style="position: relative;">
            <image class="index-category-item-icon-image" src="/image/fudai.png" />
            <view style="position: absolute;top:-15px;right:-30px;border-radius: 30px;background:#F6E65D;color:red;">{{category.luckBagMoney}}元</view>
          </view>
          <view style="padding-top:20px;">
            <view class="custom-button" bindtap="down" id="{{category.id}}">-</view>
            {{luckBagMoneyList[category.id].num}}
            <view class="custom-button" bindtap="add" id="{{category.id}}">+</view>
          </view>
        </navigator>
    </view>
    <view class="footer">
        <view>
            <image src="/image/fudai.png" style="width:{{window_width}}px;height:100%;" />
        </view>
        <view style="position: absolute;bottom:15px;left:{{window_width/2-50}}px;">
            <van-button wx:if="{{luckBagTotalPrice==0}}">立即付款</van-button>
            <van-button wx:else>立即付款({{luckBagTotalPrice}}元)</van-button>
        </view>
    </view>
</view>
