<view class="container">
    <view class="header"></view>
    <view class="margin-top">
        <van-tabs bind:change="onChange">
            <van-tab title="收货地址"></van-tab>
            <van-tab title="店铺自提"></van-tab>
        </van-tabs>
    </view>
    <view class="weui-cells weui-cells_after-title margin-top">
        <view bindtap="changePopupStatus" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="/image/all/dw.png"
                       style="margin-right: 5px; margin-top: 5px; width:11px; height: 15px;"></image>
            </view>
            <view class="weui-cell__bd">{{selectProv}}</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
    </view>
    <van-popup show="{{ popupStatus }}" z-index="999999" position="bottom">
        <van-area columns-num="1" area-list="{{ areaList }}" bind:cancel="cancel" bind:confirm="areaSelect"/>
    </van-popup>
    <view class="weui-panel weui-panel_access">
        <view wx:if="{{selectTab=='店铺自提'}}" style="height:30px;line-height:30px;padding-left:10px;">附近的自提点</view>
        <view wx:if="{{selectTab=='收货地址'}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active"
              wx:for="{{delivery_list}}"
              wx:for-item="delivery" wx:key="{{delivery.id}}" id="{{delivery.id}}" bindtap="handleClick">
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg ">
                <view class="weui-media-box__title">{{delivery.name}} {{delivery.phone}}</view>
                <view class="weui-media-box__desc address">{{delivery.contentAddress}}</view>
            </view>
        </view>
        <view wx:if="{{selectTab=='店铺自提'}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active"
              wx:for="{{shopMention}}"
              wx:for-item="delivery" wx:key="{{delivery.id}}" id="{{delivery.id}}" bindtap="handleClick">
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg ">
                <view class="weui-media-box__title">{{delivery.name}} {{delivery.phone}}</view>
                <view class="weui-media-box__title">营业时间：{{delivery.businessHours}}</view>
                <view class="weui-media-box__desc address">{{delivery.address}}</view>
            </view>
        </view>
    </view>
    <view class="no-data" wx:if="{{is_load && delivery_list.length == 0}}">
        <image src="/image/empty.svg" class="no-data-image-icon"></image>
        <view class="no-data-text">当前没有数据</view>
    </view>
    <view wx:if="{{selectTab=='收货地址'}}" class="footer">
        <navigator url="/view/delivery/detail" class="footer-add">
            新增收货地址
        </navigator>
    </view>
</view>