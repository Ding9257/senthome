<view class="container">
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="true" indicator-active-color="#c81623" autoplay="false" interval="5000" duration="500">
      <swiper-item wx:for="{{banner_list}}" wx:for-item="banner" wx:key="{{banner.banner_id}}">
        <image style="width: 514px; height: 150px; position: absolute; left: 50%; margin-left: -257px;" src="{{banner.banner_image}}" />
      </swiper-item>
    </swiper>
  </view>
  <view>
    <van-tabs bind:disabled="onClickDisabled">
      <van-tab title="热门夺宝"></van-tab>
      <van-tab title="即将结束" ></van-tab>
      <van-tab title="金额顺序"></van-tab>
    </van-tabs>
  </view>
  <view>
    <van-row wx:for="{{treasure_list}}" wx:key="{{item.id}}">
        <navigator  open-type="navigate" url="/view/treasure/detail" style="margin-top:5px;">
          <van-col span="6">
            <image class="img" src="{{item.imgsrc}}" />
          </van-col>
          <van-col span="16" offset="1"  class="col">
            <text>{{item.title}}</text>
            <text>截止时间:{{item.time}}</text>
            <text>夺宝价：￥{{item.price}}</text>
            <view style="margin-top:5px;">
                <van-progress color="#E7F72A" percentage="{{item.oddsOfWinning}}" />
            </view>
            <view>
                <text class="winning" style="float:right;margin-top:10px;">当前326人，中奖率50%</text>
            </view>
          </van-col>
      </navigator>
    </van-row>
  </view>
</view>
