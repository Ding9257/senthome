<view class="container">
    <view class="footer">
      <van-tabs bind:change="onChange">
        <van-tab wx:for="{{orderStatusList}}" wx:key="{{item.status}}" data-status="{{item.status}}" title="{{item.title}}"></van-tab>
      </van-tabs>
    </view>
    <scroll-view style="width:100%;margin-top:40px;" scroll-y="true" bindscrolltoupper="upper" bindscrolltolower="lower">
        <view class="margin-top" wx:for="{{order_list}}" wx:for-item="order" wx:key="{{order.id}}">
            <view class="border">
                <van-row>
                    <van-col offset="1" span="19">{{order.createTime}}</van-col>
                    <van-col span="4">{{orderStatusObject[order.status]}}</van-col>
                </van-row>
            </view>
            <view class="border">
                <navigator url="/view/order/detail?id={{order.id}}">
                    <van-row>
                        <van-col offset="1" span="19">
                            <image src="/image/1933457.jpg" style="width:30px;height:30px;vertical-align:middle;" />
                        </van-col>
                        <van-col span="4" style="text-align:center;">
                            <van-icon name="arrow" />
                        </van-col>
                    </van-row>
                </navigator>
            </view>
            <view class="border">
               <van-row>
                   <van-col offset="1" span="19">共{{order.productOrderList.num}}件商品  ￥{{order.productOrderList.money}}</van-col>
                   <van-col span="4"></van-col>
               </van-row>
            </view>
        </view>
    </scroll-view>
</view>