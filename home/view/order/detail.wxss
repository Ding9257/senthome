.container {
    background-color: #F9F9F9;
    font-size:14px;
}
.order-status{
    height: 160rpx;
    border-top: solid 1px #8E8E8E;
    background-color: #ffd600;
    font-family: "Microsoft YaHei";
    color: #fff;
}
.border {
    border:solid 1px #E4E4E4;
    background:#fff;
    height:40px;line-height:40px;
    border-top:none;
}
.footer {
	width: 100%;
	height:100rpx;
	line-height:100rpx;
	flex-direction: row;
    background-color: #fff;
	position: fixed;
	bottom: 0;
}
.background {
    background:#fff;
}
.order-button{
    width:130rpx;
    height:50rpx;
    line-height: 50rpx;
    float: right;
    border:solid 2px #8E8E8E;
    border-radius: 15rpx;
    text-align: center;
    margin: 12px 20rpx;
}
.order-num {
