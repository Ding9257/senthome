<view class="container">
  <view class="header"></view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{delivery_list}}"
    wx:for-item="delivery" wx:key="{{delivery.id}}" id="{{delivery.id}}"  bindtap="handleClick">
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg ">
        <view class="weui-media-box__title">{{delivery.name}} {{delivery.phone}}</view>
        <view class="weui-media-box__desc address">{{delivery.contentAddress}}</view>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
  </view>
  <view class="no-data" wx:if="{{is_load && delivery_list.length == 0}}">
    <image src="/image/empty.svg" class="no-data-image-icon"></image>
    <view class="no-data-text">当前没有数据</view>
  </view>
  <view class="footer">
    <navigator url="/view/delivery/detail" class="footer-add">
      新增收货地址
    </navigator>
  </view>
</view>