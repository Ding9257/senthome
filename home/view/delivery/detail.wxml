<view class="container">
    <form bindsubmit="handleSubmit">
        <view class="header"></view>
        <view class="weui-cells weui-cells_after-title margin-top">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">收货人:</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="name" class="weui-input" placeholder="收货人姓名" value="{{address.name}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号码:</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="phone" class="weui-input" placeholder="请输入手机号码" value="{{address.phone}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_select" bindtap="handlDialogOpenCity">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">所在城市</view>
                </view>
                <view class="weui-cell__bd">
                    <view class="weui-select weui-select_in-select-after">
                        <text class="weui-input">{{city}}</text>
                    </view>
                </view>
            </view>
            <view class="weui-cell weui-cell_select" bindtap="handlDialogOpenArea">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">所在地区</view>
                </view>
                <view class="weui-cell__bd">
                    <view class="weui-select weui-select_in-select-after">
                        <text class="weui-input">{{area}}</text>
                    </view>
                </view>
            </view>

            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea name="contentAddress" class="weui-textarea" placeholder="请输入详细地址"
                                  style="height: 3.3em" value="{{address.contentAddress}}"/>
                    </view>
                </view>
            </view>
        </view>
        <view>
            <button style="background:#f9de56;color:#000;width:90%;margin-top:10px;" class="footer-add"
                    formType="submit">
                保存
            </button>
            <button wx:if="{{!!id}}" bindtap="del" class="footer-add" style="background:#fff;color:#b47631;width:90%;margin-top:10px;">
                删除
            </button>
        </view>
    </form>
</view>
<van-popup show="{{ popupStatus }}" z-index="999999" position="bottom">
    <van-area columns-num="1" area-list="{{ vanPopupList }}" bind:confirm="popupSelect"/>
</van-popup>
<van-toast id="van-toast"/>