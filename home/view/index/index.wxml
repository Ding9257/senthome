<view class="container">
    <view class="top">
      <view>
        <van-row class="center">
            <van-col offset="1" span="22">
                <button class="button-radius">
                    <van-row>
                        <van-col>
                            <image src="/image/location.png" style=""  class="button-img"/>
                        </van-col>
                        <van-col offset="2" span="18" class="button-text" style="">送到家(通州鑫源小区)</van-col>
                        <van-col span="2">
                            <image src="/image/location.png"
                            style="position: absolute;width:30px;height:20px;padding-top:5px;right:1px;" />
                        </van-col>
                    </van-row>
                </button>
            </van-col>
        </van-row>
      </view>
      <view style="margin-top:10px;">
        <van-row>
          <van-col offset="2" span="6">
            <image src="/image/1933457.jpg" style="width: 80px; height: 80px;" />
          </van-col>
          <van-col span="14">
            <view style="font-size:14px;color:#fff" class="van-ellipsis">文字描述文字描述文字描述文字描述</view>
            <view style="margin-top:5px;font-size:12px;color:#fff" class="van-ellipsis">营业时间：2018-09-12 12：00</view>
            <view style="margin-top:5px;font-size:13px;" class="van-ellipsis">文字描述文字描述文字描述文字描述</view>
          </van-col>
        </van-row>
      </view>
      <view style="padding-bottom:10px;" class="page-section page-section-spacing swiper">
          <van-row>
            <van-col offset="1" span="22">
                <swiper indicator-dots="true" indicator-active-color="#c81623" autoplay="false" interval="5000" duration="500">
                  <swiper-item wx:for="{{banner_list}}" wx:for-item="banner" wx:key="{{banner.id}}">
                    <image alt="{{banner.name}}" style="width: 514px; height: 150px; position: absolute; left: 50%; margin-left: -257px;" src="{{banner.url}}" />
                  </swiper-item>
                </swiper>
            </van-col>
          </van-row>
      </view>
  </view>
  <view style="background: #fff;">
      <view style="padding-top:10px">
          <van-row>
            <van-col offset="1" span="10">
                <navigator style="text-align:center;padding-top:5px;" open-type="switchTab" url="/view/category/index" class="outline">
                    <view style="vertical-align:middle;">
                        <image src="/image/1933457.jpg" style="width: 80px; height: 80px;" />
                    </view>
                    <view>
                        <text>商品选购</text>
                    </view>
                </navigator>
            </van-col>
            <van-col offset="1" span="10">
                <view class="outline" style="background-color:#f7d4ea;">
                    <navigator open-type="navigate" url="/view/treasure/index">
                        <image src="/image/1933457.jpg" style="padding-top:5px;padding-left:10px;width: 30px; height: 40px;" />
                        <text style="position: absolute;margin-top:15px">轻松夺宝</text>
                    </navigator>
                </view>
                <view class="outline" style="margin-top:9px;background-color:#f3fde3;">
                    <navigator open-type="navigate" url="/view/luckBag/index">
                        <image src="/image/1933457.jpg" style="padding-top:5px;padding-left:10px;width: 30px; height: 40px;" />
                        <text style="position: absolute;margin-top:15px">惊喜福袋</text>
                    </navigator>
                </view>
            </van-col>
          </van-row>
      </view>
      <view style="margin-bottom:20px;padding-top:10px;">
        <view class="text-center">店长推荐</view>
        <scroll-view class="scroll-view" scroll-x>
            <navigator class="scroll-view-item_H" url="/view/cart/detail?id={{item.id}}"
            wx:for="{{dianZhang_list}}" wx:key="{{item.id}}">
                <view style="text-align:center;">
                    <image class="" src="{{item.img}}"/>
                    <view class="text-wrap" style="font-size:12px;display:block">{{item.details}}</view>
                </view>
            </navigator>
          </scroll-view>
      </view>
    </view>

</view>
