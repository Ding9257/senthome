.index-category {
    overflow: hidden;
    background: #fff;
    border-top: 1 rpx solid #d9d9d9;
    border-bottom: 1 rpx solid #d9d9d9;
}

.index-category-item {
    float: left;
    width: 33.33%;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 8px;
}

.index-category-item-icon {
    position: relative;
    margin-left: -25px;
    margin-bottom: 5px;
    left: 50%;
    width: 50px;
    height: 50px;
    border-radius: 25px;
    background: #000;
}

.index-category-item-icon-image {
    margin-top: 10px;
    width: 30px;
    height: 30px;
}

.index-product {
    border-top: 1 rpx solid #d9d9d9;
}

.index-product-card {
    padding: 10px;
    border-bottom: 1 rpx solid #d9d9d9;
}

.index-product-card-name {
    font-size: 14px;
    font-weight: bold;
}

.index-product-card-price {
    color: #c81623;
    margin-top: 5px;
    margin-left: -2px;
}

.category-right-item {
    float: left;
    border: #ddd 1 rpx solid;
    background: #fff;
    background-repeat: no-repeat;
    background-size: contain;
    border-radius: 4px;
    overflow: hidden;
}

.category-right-item-name {
    margin-top: 5px;
    padding-left: 5px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.category-right-item-price {
    color: #c81623;
    margin-top: 2px;
    margin-bottom: 8px;
    padding-left: 3px;
}

page {
    background: #fff;
}

.scroll-view {
    height: 280rpx;
    white-space: nowrap;
}

.scroll-view-item_H {
    height: 280rpx;
    width: 166rpx;
    padding-right: 44rpx;
    display: inline-block;
}

.text-center {
    text-align: center;
}

.text-wrap {
    word-wrap: break-word;
    word-break: normal;
    break-all: normal;
    padding: 0 10px;
    overflow: auto;
    white-space: pre-line;
}

.button-radius {
    border-radius: 50px;
    background: #f8e36d;
    height: 30px;
    line-height: 30px;
}

.button-text {
    text-align: left;
    padding-left: 10px;
}

.button-img {
    position: absolute;
    left: 10px;
    width: 11px;
    height: 15px;
    padding-top: 8px;
}

.shop text {
    display: block;
}

.center {
    text-align: center;
}

.top {
    position: relative;
    height: 580rpx;
    background-color: #fff;
}

.box-shadow {
    box-shadow: 10px 10px 5px #888888;
}

.outline {
    border: 1px solid #D7D7D7;
    outline-color: #D7D7D7;
    outline-style: outset;
    outline-width: 1px;
}

.positioning {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 50px;
    background-color: #f8e36d;
}

.positioning view {
    display: inline-block;
}
.positioning .text{
    font-family:"Microsoft YaHei";
    font-size: 26rpx;
    color: #3d3d3d;
}
.shopInfo view{
    display: inline-block;
}
.shopInfo .text{
    font-family:"Microsoft YaHei";
    color: #efefef;
}
.banner {
    position: absolute;
    top: 270rpx;
    height: 360rpx;
    width: 690rpx;
}
.slide-image{
    border-radius: 10rpx;
}
.img-shadow{
    /*box-shadow:0px 1px 4px rgba(0,0,0,0.3),0 0 40px rgba(0,0,0,0.1);*/
    box-shadow:0px 1px 4px rgba(0,0,0,0.3);
}
