<!DOCTYPE html>
<html>
<%- include ./../public/header %>

    <body>
        <div class="wrapper">
            <%- include ./../public/sidebar %>
                <div class="main-panel">
                    <%- include ./../public/nav %>
                        <div class="content" style="margin-top: 5px;">
                            <div style="padding: 14px">
                                <form action="#" method="post" class="form-check-rule edit_box">
                                    <div class="text-center bg-primary edit_title">
                                        <h4>修改信息</h4>
                                    </div>
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>代码编号</label>
                                                <input type="text" name="code_key_cd" value="<%= locals.data && data.code_key_cd%>" required>
                                            </div>
                                            <div class="col-md-5">
                                                <label>代码类型编号</label>
                                                <input type="text" name="code_type_cd" value="<%= locals.data && data.code_type_cd%>" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>代码值</label>
                                                <input type="text" name="code_value" value="<%= locals.data && data.code_value%>" required>
                                            </div>
                                            <div class="col-md-5">
                                                <label>代码名称</label>
                                                <input type="text" name="code_name" value="<%= locals.data && data.code_name%>" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>含义说明</label>
                                                <input type="text" name="description" value="<%= locals.data && data.description%>" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="text-align: center;">
                                        <button class="btn btn-success" type="submit">添加</button>
                                        <a href="#" class="btn btn-success">返回</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                </div>
        </div>
    </body>

</html>