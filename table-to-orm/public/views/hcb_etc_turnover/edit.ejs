<!DOCTYPE html>
<html>
<%- include ./../public/header %>

    <body>
        <div class="wrapper">
            <%- include ./../public/sidebar %>
                <div class="main-panel">
                    <%- include ./../public/nav %>
                        <div class="content" style="margin-top: 5px;">
                            <div style="padding: 14px">
                                <form action="#" method="post" class="form-check-rule edit_box">
                                    <div class="text-center bg-primary edit_title">
                                        <h4>修改信息</h4>
                                    </div>
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>ETC卡号</label>
                                                <input type="text" name="etc_no" value="<%= locals.data && data.etc_no%>" required>
                                            </div>
                                            <div class="col-md-5">
                                                <label>消费日期</label>
                                                <input type="text" name="xiaofei_date" value="<%= locals.data && data.xiaofei_date%>" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>服务方</label>
                                                <input type="text" name="service" value="<%= locals.data && data.service%>" required>
                                            </div>
                                            <div class="col-md-5">
                                                <label>入站</label>
                                                <input type="text" name="in" value="<%= locals.data && data.in%>" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>入站时间</label>
                                                <input type="text" name="in_time" value="<%= locals.data && data.in_time%>" required>
                                            </div>
                                            <div class="col-md-5">
                                                <label>出站</label>
                                                <input type="text" name="out" value="<%= locals.data && data.out%>" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>出站时间</label>
                                                <input type="text" name="out_time" value="<%= locals.data && data.out_time%>" required>
                                            </div>
                                            <div class="col-md-5">
                                                <label>记录上报时间</label>
                                                <input type="text" name="record_time" value="<%= locals.data && data.record_time%>" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-md-offset-1">
                                                <label>消费金额</label>
                                                <input type="text" name="amt" value="<%= locals.data && data.amt%>" required>
                                            </div>
                                            <div class="col-md-5">
                                                <label>消费余额</label>
                                                <input type="text" name="balance" value="<%= locals.data && data.balance%>" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="text-align: center;">
                                        <button class="btn btn-success" type="submit">添加</button>
                                        <a href="#" class="btn btn-success">返回</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                </div>
        </div>
    </body>

</html>